<div class="as-article-content-module">

  <div class="as-single-article-image lazy-background" data-bg="{{ article.image.src | img_url: 'master', scale: 2 }}"></div>

  <div class="as-article-content-container">
    <div>

      <div class="post_date">{{ article.published_at | date: "%b %d, %Y" }}</div>

      <h1 class="
                        twcss-font-noto
                        twcss-font-extrabold
                        lg:twcss-text-[48px]
                        twcss-text-[36px]
                        lg:twcss-mb-3
                        twcss-uppercase
                        twcss-pb-2
                        twcss-pt-5
                        lg:twcss-pb-5
                        lg:group-hover:twcss-text-white post_title">{{ article.title }}</h1>

      <div class="post_content">
        {{ article.content }}</div>

      {% assign full_url = request.host | append: request.path | prepend: 'https://' %}

      <div class="post_share">
        <div class="inner_post_share">

          <div class="share-links-title">Teilen</div>
          <ul class="share-links-list">

            <li>
              <a
                title="Facebook Share"
                href="https://www.facebook.com/sharer/sharer.php?u={{ full_url }}"
                target="_blank">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  width="48px"
                  height="48px">
                  <path d="M11.666,2.005C6.62,2.17,2.374,6.251,2.025,11.288c-0.369,5.329,3.442,9.832,8.481,10.589V14.65H8.892 c-0.726,0-1.314-0.588-1.314-1.314v0c0-0.726,0.588-1.314,1.314-1.314h1.613v-1.749c0-2.896,1.411-4.167,3.818-4.167 c0.357,0,0.662,0.008,0.921,0.021c0.636,0.031,1.129,0.561,1.129,1.198v0c0,0.663-0.537,1.2-1.2,1.2h-0.442 c-1.022,0-1.379,0.969-1.379,2.061v1.437h1.87c0.591,0,1.043,0.527,0.953,1.111l-0.108,0.701c-0.073,0.47-0.477,0.817-0.953,0.817 h-1.762v7.247C18.235,21.236,22,17.062,22,12C22,6.366,17.341,1.821,11.666,2.005z" /></svg>
              </a>
            </li>

            <li>
              <a
                title="Twitter Share"
                href="http://twitter.com/share?text={{article.title}}&url={{ full_url }}"
                target="_blank">
                <i class="fab fa-twitter"></i>
              </a>
            </li>

            <li>
              <a
                title="Pinterest Share"
                href="https://pinterest.com/pin/create/button/?url={{ full_url }}&media={{ article.image.src | img_url: 'master', scale: 2 }}&description={{article.title}}"
                target="_blank">
                <i class="fab fa-pinterest"></i>
              </a>
            </li>

          </ul>
        </div>
      </div>

    </div>
  </div>


</div>

{% schema %}
  {
    "name": "AS - Blog Article content",
    "class": "as-article-content-section",
    "settings": [],
    "presets": [
      {
        "name": "AS - Blog Article content",
        "category": "Artesian spas"
      }
    ]
  }
{% endschema %}