<div class="twcss-flex twcss-max-w-[var(--page-width)] flex-row twcss-justify-between twcss-m-auto twcss-mt-24">
    {% for block in section.blocks %}
    <div class="twcss-flex twcss-flex-{{ section.settings.direction }} twcss-w-1/3 {%- if section.settings.direction == 'col' -%}
        twcss-items-left 
    {%- else -%}
        twcss-items-center 
    {%- endif -%} twcss-max-w-[359px] twcss-text-text">
        <img src="{{ block.settings.iconOne | img_url: 'medium' }}" alt="Erster Loumana USP" width="114" height="114" loading="lazy" class="twcss-mr-3 twcss-mb-7"/>
        {% if block.settings.heading != "" %}
            <h3 class=" twcss-font-extrabold twcss-font-noto twcss-text-[34px]"> {{ block.settings.heading }} </h3>
        {% endif %}
        <p class="twcss-font-noto twcss-font-light twcss-text-text twcss-mt-2">
            {{ block.settings.textOne }}
        </p>
    </div>
        
    {% endfor %}
</div>


{% schema %}
{
   "name": "Loumana USP",
   "tag": "section",
   "settings": [

   {
    "type": "radio",
    "id": "direction",
    "label": "Richtung",
    "default": "row",
    "info": "Horizontail oder Vertikal ausrichten",
    "options": [
        {
            "value": "col",
            "label": "Vertikal"
        },

        {
            "value": "row",
            "label": "Horizontal"
        }
    ]
 }



   ],
   "blocks": [

   {
       "name": "Vorteil",
      "type": "text",
        "settings":[
        {
            "type": "image_picker",
            "id": "iconOne",
            "label": "UPS Icon"
           },
          {
            "type": "text",
            "id": "heading",
            "label": "Ãœberschrift",
            "info": "Optional, erscheint nicht, wenn nicht gesetzt"
          },
          {
            "type": "textarea",
            "id": "textOne",
            "label": "USP Text",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pretium, cum egestas"
          }
        ]

   }
   ],
  "presets": [
    {
        "name": "Loumana USP"
    }
  ]
}
{% endschema %}