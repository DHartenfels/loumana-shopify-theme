<div class="lg:twcss-flex lg:twcss-max-w-[var(--page-width)] twcss-max-w-lg flex-row lg:twcss-justify-between twcss-m-auto lg:twcss-mt-24 twcss-mt-24">
    {% for block in section.blocks %}
    <div class="twcss-flex twcss-items-center {% if block.settings.heading != "" %} twcss-flex-col {% else%} twcss-flex-row {% endif %} twcss-mb-10 lg:twcss-flex-{{ section.settings.direction }} lg:twcss-w-1/3  animate__animated usp{% if section.settings.direction == 'col' %}
         lg:twcss-items-left 
    {% else %}
        twcss-items-center 
    {%  endif  %} lg:twcss-max-w-[359px] lg:twcss-text-text">
        <img src="{{ block.settings.iconOne | img_url: 'master' }}" alt="Erster Loumana USP" width="auto" height="auto" loading="lazy" class="twcss-mb-5
        {% if block.settings.heading != "" %}
          twcss-w-[120px] twcss-h-[120px] twcss-ml-0 twcss-mr-auto 
        {% else%}

        twcss-w-[60px] twcss-h-[60px] twcss-mr-5

        {% endif %}

        "/>
        {% if block.settings.heading != "" %}
            <h3 class=" lg:twcss-font-extrabold twcss-font-noto twcss-text-[24px] lg:twcss-text-[34px] twcss-ml-0 twcss-mr-auto"> {{ block.settings.heading }} </h3>
        {% endif %}
        <p class="twcss-font-noto twcss-font-light lg:twcss-text-text twcss-mt-2 lg:twcss-leading-6 twcss-leading-[19px] twcss-ml-0">
            {{ block.settings.textOne }}
        </p>
    </div>
        
    {% endfor %}
</div>

<script>
const observer = new IntersectionObserver(entries => {
  // Loop over the entries
  entries.forEach(entry => {
    // If the element is visible
    if (entry.isIntersecting) {
      // Add the animation class
      entry.target.classList.add('animate__backInLeft');
    }
  });
});
var usps= document.getElementsByClassName('usp');
Array.from(usps).forEach((usp) => {
  observer.observe(usp);
})

</script>


