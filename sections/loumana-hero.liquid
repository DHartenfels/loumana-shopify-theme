<div class="twcss-relative twcss-min-h-screen twcss-overflow-hidden">
    <img src="{{'ElipseOpen.svg' | asset_url}}" alt="" class="twcss-absolute twcss-top-0 twcss-right-[20%] twcss-w-3/12 twcss-h-40" width="auto" height="auto" loading="eager">
    <img src="{{'ElipseLeft.svg' | asset_url}}" alt="" class="twcss-absolute twcss-left-0 twcss-top-1/4 twcss-w-[150px] twcss-h-[450px]" width="auto" height="auto" loading="eager">
    <img src="{{'ElipseRight.svg' | asset_url}}" alt="" class="twcss-absolute twcss-right-0 twcss-bottom-0" width="auto" height="auto" loading="eager">
<div class="twcss-flex twcss-items-center twcss-max-w-[var(--page-width)] twcss-m-auto twcss-min-h-screen">

    <div class="twcss-z-10 twcss-max-w-3xl twcss-font-noto" >
        <p class="twcss-font-light twcss-text-subline twcss-uppercase twcss-mb-3 twcss-font-noto"">
            {{ section.settings.subline }}
        </p>
        <h1 class="twcss-font-extrabold twcss-uppercase twcss-text-heading twcss-leading-none twcss-mb-5 twcss-font-noto"">
            {{ section.settings.headline }}
        </h1>
        <div class="twcss-font-light twcss-text-text twcss-font-noto"">
            {{ section.settings.textarea }}
        </div>
        <a href="{{ section.settings.btnURL }}" class="mainButton">Mehr dazu</a>
    </div>
    <div class="twcss-w-1/2 twcss-flex twcss-justify-end">
         <img src="{{ section.settings.heroImage | img_url: 'master' }}" alt="" width="auto" height="auto" loading="eager" >
    </div>
</div>
</div>




{% schema %}
{
   "name": "Loumana Hero",
   "tag": "section",
  "settings": [
     {
         "type": "text",
         "id": "subline",
         "label": "Subline",
         "default": "lorem ipsum",
         "placeholder": "lorem ipsum"
     },
    {
        "type": "text",
        "id": "headline",
        "label": "Headline",
        "default": "Lorem Headline",
        "info": "Ãœberschrift",
        "placeholder": "Lorem Headline"
    },
    {
        "type": "textarea",
        "id": "textarea",
        "label": "Textarea",
        "default": "lorem ipsum",
        "info": "Introtext im Hero",
        "placeholder": "Lorem ipsum"
    },
   {
       "type": "url",
       "id": "btnURL",
       "label": "Button Link"
   },
  {
    "type": "image_picker",
    "id": "heroImage",
    "label": "Hero Image"
  }
  ],
 "presets": [
    {
        "category": "Hero",
        "name":"Loumana Hero"
    }
 ]
}
{% endschema %}